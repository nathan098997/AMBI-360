# =============================================
# AMBI360 - Configurações de Ambiente
# =============================================
# Copie este arquivo para .env e configure suas credenciais

# Banco de Dados MySQL
DB_HOST=localhost
DB_PORT=3306
DB_USER=root
DB_PASSWORD=
DB_NAME=ambi360_db

# Configurações da Aplicação
APP_PORT=3001
APP_ENV=development
APP_SECRET_KEY=CHANGE_THIS_SECRET_KEY_IN_PRODUCTION

# Configurações de Segurança
ADMIN_PASSWORD_HASH=
JWT_SECRET=CHANGE_THIS_JWT_SECRET_IN_PRODUCTION
SESSION_SECRET=CHANGE_THIS_SESSION_SECRET_IN_PRODUCTION
BCRYPT_ROUNDS=12
JWT_EXPIRES_IN=24h
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX=100

# Configurações de Upload
MAX_FILE_SIZE=10MB
UPLOAD_PATH=./uploads
ALLOWED_EXTENSIONS=jpg,jpeg,png,gif

# Configurações de Backup (GitHub)
GITHUB_TOKEN=
GITHUB_REPO=username/repository-name
BACKUP_ENABLED=false

# Configurações de Email (opcional)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
FROM_EMAIL=noreply@ambi360.com

# Configurações de Cache
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Debug e Logs
DEBUG_MODE=true
LOG_LEVEL=info
LOG_FILE=./logs/app.log